@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Registrering vellykket";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h4>Registrering vellykket</h4>
            <p class="mt-4">
                Du vil bli sendt til innloggingssiden om
                <span id="countdown">7</span> sekunder.
            </p>
            <p>
                Hvis du ikke blir omdirigert,
                <a asp-action="Login" asp-controller="Account">Klikk her</a> for å gå til innloggingssiden.
            </p>
        </div>
    </div>
</div>

<script>
    var seconds = 7; // Countdown starting from 7 seconds
    var countdownElement = document.getElementById('countdown');

    // Update the countdown every second
    setInterval(function () {
        seconds--;
        countdownElement.textContent = seconds;

        // Omdiriger når nedtellingen når null
        if (seconds <= 0) {
            window.location.href = '@Url.Action("Login", "Account")';
        }
    }, 1000); // 1000 millisekunder = 1 sekund
</script>
