@model WebApplication1.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Bruker en felles layout for å sikre konsistent utseende på tvers av hele applikasjonen
    ViewData["Title"] = "Logg inn"; // Setter tittel på nettleserfanen til 'Logg inn'
}

<!-- Hovedcontainer -->
<div class="d-flex justify-content-center align-items-center" style="height: calc(100vh - 150px);">
    <div class="card shadow-lg p-5" style="width: 22rem; background-color: rgba(255, 255, 255, 0.9); border-radius: 15px;">
        <!-- Overskrift -->
        <h2 class="text-center mb-4" style="font-size: 1.8rem; font-weight: bold; color: #333;">Logg inn</h2>

        <!-- Login-skjema -->
        <form asp-action="Login" method="post">
            <div class="form-group mt-3">
                <label asp-for="Email" style="color: #555;">Email</label> <!-- Label for e-postfeltet -->
                <input asp-for="Email" class="form-control" /> <!-- Input-felt for e-postadresse -->
                <span asp-validation-for="Email" class="text-danger"></span> <!-- Valideringsmelding for e-post -->
            </div>

            <div class="form-group mt-3">
                <label asp-for="Password" style="color: #555;">Password</label> <!-- Label for passordfeltet -->
                <input asp-for="Password" class="form-control" type="password" /> <!-- Input-felt for passord -->
                <span asp-validation-for="Password" class="text-danger"></span> <!-- Valideringsmelding for passord -->
            </div>

            <div class="form-check mt-3">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" /> <!-- Checkbox for 'Husk meg' funksjonaliteten -->
                <label asp-for="RememberMe" class="form-check-label" style="color: #555;">Husk meg</label> <!-- Label for 'Husk meg' checkbox -->
            </div>

            <!-- Logg inn-knapp -->
            <button type="submit" class="btn btn-green mt-4 w-100" style="font-weight: bold;">Logg inn</button>
        </form>
    </div>
</div>

<!-- Tilpassede stiler -->
<style>
    body {
        background-image: url('https://www.kartverket.no/contentassets/14339e89aa5846b18ee25cd22d5e712d/forsidebilde-desktop-host2020b.jpg?width=1464&height=458&mode=crop&scale=both&quality=75'); /* Bakgrunnsbilde for innloggingssiden */
        background-size: cover; /* Bakgrunnsbildet dekker hele skjermen */
        background-position: center; /* Sentral posisjonering av bakgrunnsbildet */
        margin: 0;
        height: 100vh; /* Full høyde av viewport */
        overflow: hidden; /* Deaktiverer scrolling */
    }

    .card {
        border: 1px solid #ddd; /* Lett grense rundt kortet for stil */
    }

    .btn-green {
        background-color: #3da539; /* Grønn farge fra logoen */
        border-color: #3da539;
        color: white;
    }

    .btn-green:hover {
        background-color: #318a2e; /* Mørkere grønn for hover-effekt */
        border-color: #318a2e;
    }
</style>