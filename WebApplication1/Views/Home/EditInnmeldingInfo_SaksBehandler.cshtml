@model WebApplication1.Data.GeoChange

@{
    ViewData["Title"] = "Edit";
    var source = ViewData["Source"] as string;
}

<div class="container mt-5">
    <h2>Edit GeoChange</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="source" value="@source" /> <!-- Pass the source -->

        <div class="form-group">
            <label asp-for="GeoJson">GeoJson</label>
            <textarea asp-for="GeoJson" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        @if (source != "MineInnmeldinger")
        {
            <div class="form-group">
                <label asp-for="Status">Status</label>
                <input asp-for="Status" class="form-control" />
            </div>
        }
        else
        {
            <input type="hidden" asp-for="Status" /> <!-- Keeps the Status value intact but hides it -->
        }

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="@source" class="btn btn-secondary">Back</a> <!-- Ensure the back button uses the source -->
    </form>

    <!-- Map Section -->
    <div class="mt-4">
        <h4>Map:</h4>
        <div id="map" style="height: 500px; border: 1px solid #ccc;"></div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize the map
        var map = L.map('map').setView([0, 0], 2); // Default center and zoom level

        // Add OpenStreetMap tiles
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        // Parse the GeoJSON from the model
        var geoJsonData = @Html.Raw(Model.GeoJson);

        // Add GeoJSON to the map
        var geoJsonLayer = L.geoJSON(geoJsonData).addTo(map);

        // Fit the map to the bounds of the GeoJSON layer
        map.fitBounds(geoJsonLayer.getBounds());
    });
</script>

<!-- Add Leaflet.js and CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
