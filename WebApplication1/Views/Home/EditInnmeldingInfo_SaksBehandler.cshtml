@model WebApplication1.Data.GeoChange

@{
    ViewData["Title"] = "Rediger";
    var source = ViewData["Source"] as string;
}

<div class="container mt-5">
    <h2>Rediger Geoendringer</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="GeoJson">GeoJson</label>
            <textarea asp-for="GeoJson" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Description">Beskrivelse</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        @if (source != "MineInnmeldinger")
        {
            <div class="form-group">
                <label asp-for="Status">Status</label>
                <input asp-for="Status" class="form-control" />
            </div>
        }
        else
        {
            <input type="hidden" asp-for="Status" /> <!-- Keeps the Status value intact but hides it -->
        }

        <button type="submit" class="btn btn-primary">Lagre</button>
        <a asp-action="MineInnmeldinger" class="btn btn-secondary">tilbake</a>
    </form>
</div>
