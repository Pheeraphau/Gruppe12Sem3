@model WebApplication1.Data.GeoChange

@{
    ViewData["Title"] = "Edit";
    var source = ViewData["Source"] as string;
}

<div class="container mt-5">
    <h2>Edit GeoChange</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="source" value="@source" /> <!-- Pass the source -->

        <div class="form-group">
            <label asp-for="GeoJson">GeoJson</label>
            <textarea asp-for="GeoJson" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        @if (source != "MineInnmeldinger")
        {
            <div class="form-group">
                <label asp-for="Status">Status</label>
                <input asp-for="Status" class="form-control" />
            </div>
        }
        else
        {
            <input type="hidden" asp-for="Status" /> <!-- Keeps the Status value intact but hides it -->
        }

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="@source" class="btn btn-secondary">Back</a> <!-- Ensure the back button uses the source -->
    </form>

</div>
