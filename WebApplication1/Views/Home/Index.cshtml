@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Velkommen";
}

<!-- Main container -->
<div class="d-flex justify-content-center align-items-center" style="height: calc(100vh - 150px);">
    <div class="card shadow-lg p-5" style="width: 22rem; background-color: rgba(255, 255, 255, 0.9); border-radius: 15px;">
        <!-- Welcome text -->
        <h1 class="mb-4" style="font-size: 1.8rem; font-weight: bold; color: #333;">Velkommen til Kartverket</h1>

        <!-- Description -->
        <p class="mb-4" style="font-size: 1rem; color: #555;">
            Vennligst logg inn eller registrer deg for å komme i gang.
        </p>

        <!-- Buttons -->
        <a href="@Url.Action("Login", "Account")" class="btn btn-green btn-block mb-3" style="width: 100%; font-weight: bold;">
            Logg inn
        </a>
        <a href="@Url.Action("Register", "Account")" class="btn btn-blue btn-block" style="width: 100%; font-weight: bold;">
            Registrer deg
        </a>
    </div>
</div>

<!-- Custom Styles -->
<style>
    body {
        background-image: url('https://www.kartverket.no/contentassets/14339e89aa5846b18ee25cd22d5e712d/forsidebilde-desktop-host2020b.jpg?width=1464&height=458&mode=crop&scale=both&quality=75');
        background-size: cover;
        background-position: center;
        margin: 0;
        height: 100vh; /* Full viewport height */
        overflow: hidden; /* Disable scrolling */
    }

    .card {
        border: 1px solid #ddd;
    }

    .btn-green {
        background-color: #3da539; /* Green from the logo */
        border-color: #3da539;
        color: white;
    }

        .btn-green:hover {
            background-color: #318a2e; /* Darker green for hover */
            border-color: #318a2e;
        }

    .btn-blue {
        background-color: #005baa; /* Blue from the logo */
        border-color: #005baa;
        color: white;
    }

        .btn-blue:hover {
            background-color: #004080; /* Darker blue for hover */
            border-color: #004080;
        }
</style>
