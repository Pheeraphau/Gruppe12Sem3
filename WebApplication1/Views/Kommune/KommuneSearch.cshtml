@{
    ViewData["Title"] = "Kommune søk";
}

<h2>@ViewData["Title"]</h2>

<form method="post" action="@Url.Action("Search", "Kommune")">
    <!-- Form for søking av kommune ved bruk av kommunenummer -->
    <div class="form-group">
        <label for="kommunenummer">Kommunenummer</label>
        <input type="text" id="kommunenummer" name="kommunenummer" class="form-control" placeholder="Skriv inn kommunenummer" />
    </div>
    <button type="submit" class="btn btn-primary">Søk</button>
</form>

@if (ViewData["ErrorMessage"] != null)
{
    <!-- Vise feilmelding dersom søket feiler -->
    <div class="alert alert-danger mt-3">
        @ViewData["ErrorMessage"]
    </div>
}