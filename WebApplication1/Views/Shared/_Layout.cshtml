<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Set character encoding to UTF-8 for wide language support -->
    <meta charset="utf-8" />

    <!-- Make the page responsive to the device width -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Set the page title dynamically -->
    <title>@ViewData["Title"] - Kartverket</title>

    <!-- Link to local CSS files and cache-bust for updates -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MintyCSSTheme.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
</head>
<body>
    <header>
        <!-- Navbar with logo and navigation links -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #ffffff; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); position: fixed; width: 100%; z-index: 1000;">
            <div class="container-fluid">
                <!-- Logo linking to the homepage -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <!-- Inserted the base64 encoded logo image -->
                    <img src="data:image/png;base64," alt="Kartverket Logo" style="height: 44px; margin-right: 12px;" />
                    <span>Kartverket</span>
                </a>

                <!-- Toggle button for smaller screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation menu with links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="MineInnmeldinger">Mine Innmeldinger</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="SaksbehandlerOversikt">Saksbehandler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="RegisterAreaChange">Register Area Change</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content container, adjusted to avoid overlap with fixed navbar -->
    <div class="container" style="margin-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer with privacy link -->
    <footer class="footer text-muted" style="position: fixed; width: 100%; bottom: 0; background-color: #ffffff; box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1); z-index: 1000;">
        <div class="container">
            © 2024 - WebApplication1 - <a href="/Home/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Importing jQuery and Bootstrap JavaScript libraries from local storage -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.js"></script>

    <!-- Importing Leaflet JavaScript for map display -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>

    <!-- Including additional JavaScript sections specified on individual pages -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

