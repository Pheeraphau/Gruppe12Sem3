@model WebApplication1.Data.GeoChange

@{
    ViewData["Title"] = "Rediger"; // Setter tittelen på nettleserfanen til 'Rediger'
    var source = ViewData["Source"] as string; // Henter kilden (f.eks. 'MineInnmeldinger' eller 'SaksBehandlerOversikt') for navigasjon
}

<div class="container mt-5">
    <h2>Rediger GeoChange</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="source" value="@source" /> <!-- Beholder kilden for å navigere tilbake til riktig side etter lagring -->

        <div class="form-group">
            <label asp-for="GeoJson">GeoJson</label>
            <textarea asp-for="GeoJson" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Description">Beskrivelse</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        @if (source != "MineInnmeldinger")
        {
            <div class="form-group">
                <label asp-for="Status">Status</label>
                <input asp-for="Status" class="form-control" />
            </div>
        }
        else
        {
            <input type="hidden" asp-for="Status" />
        }

        <button type="submit" class="btn btn-primary">Lagre</button> <!-- Lagre-knapp for å sende skjemaet -->
        <a asp-action="@source" class="btn btn-secondary">Tilbake</a> <!-- Tilbake-knapp som bruker kilden for riktig navigasjon -->
    </form>

    <div class="mt-4">
        <h4>Kart:</h4> <!-- Overskrift for kartseksjonen -->
        <div id="map" style="height: 500px; border: 1px solid #ccc;"></div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialiserer kartet med standard senter og zoomnivå
        var map = L.map('map').setView([0, 0], 2);

        // Legger til OpenStreetMap-fliser
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        // Parser GeoJSON fra modellen
        var geoJsonData = @Html.Raw(Model.GeoJson);

        // Legger til GeoJSON-lag på kartet
        var geoJsonLayer = L.geoJSON(geoJsonData).addTo(map);

        // Tilpasser kartet til grensene for GeoJSON-laget
        map.fitBounds(geoJsonLayer.getBounds());
    });
</script>

<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
