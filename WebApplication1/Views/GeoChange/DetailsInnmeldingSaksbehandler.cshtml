@model WebApplication1.Data.GeoChange

@{
    ViewData["Title"] = "Details - Saksbehandler";
}

<div class="container mt-5">
    <div class="card p-4" style="background-color: rgba(255, 255, 255, 0.9); box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); border-radius: 8px;">
        <!-- Tilbakeknapp for å navigere til riktig side avhengig av kilde -->
        <div class="d-flex justify-content-end mb-3">
            @if (ViewData["Source"]?.ToString() == "MineInnmeldinger")
            {
                <a href="@Url.Action("MineInnmeldinger", "GeoChange")" class="btn btn-secondary">Back</a>
            }
            else
            {
                <a href="@Url.Action("SaksBehandlerOversikt", "GeoChange")" class="btn btn-secondary">Back</a>
            }
        </div>

        <h2 class="text-center">Details for ID: @Model.Id</h2>

        <!-- Viser beskrivelse fra GeoChange-modellen -->
        <div class="form-group mt-3">
            <label><strong>Description:</strong></label>
            <p>@Model.Description</p>
        </div>

        <!-- Viser status fra GeoChange-modellen -->
        <div class="form-group mt-3">
            <label><strong>Status:</strong></label>
            <p>@Model.Status</p>
        </div>

        <!-- Seksjon for kartvisning av geografiske data -->
        <div class="mt-4">
            <h4>Map:</h4>
            <div id="map" style="height: 500px; border: 1px solid #ccc;"></div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialiserer kartet med standard senter og zoomnivå
        var map = L.map('map').setView([0, 0], 2);

        // Legger til OpenStreetMap-fliser til kartet
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        // Parser GeoJSON-data fra modellen
        var geoJsonData = @Html.Raw(Model.GeoJson);

        // Legger til GeoJSON-lag på kartet
        var geoJsonLayer = L.geoJSON(geoJsonData).addTo(map);

        // Tilpasser kartet til å vise hele GeoJSON-laget
        map.fitBounds(geoJsonLayer.getBounds());
    });
</script>

<!-- Legger til Leaflet.js og CSS for kartvisning -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<style>
    .card {
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 8px;
    }

    .btn {
        margin-top: 10px;
    }

    .footer {
        position: relative;
        bottom: 0;
        width: 100%;
    }
</style>
